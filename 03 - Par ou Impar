#include <stdio.h>
#include <stdlib.h>
#include <math.h>
#include <locale.h>

int main(){
	
	//Idioma Português
	setlocale(LC_ALL, "portuguese");
	
	//Variáveis
	int numero1; 


	printf("Digite o primeiro número: ");
	  scanf("%d", &numero1); 

	  
    //Par ou Impar
    if (numero1 % 2 == 0){
    	printf("O número %d é par", numero1);
    	
	}else{
		printf("O número %d é ímpar", numero1);
	}
    
	  
    
}
