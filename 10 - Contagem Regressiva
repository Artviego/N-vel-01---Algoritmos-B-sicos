#include <stdio.h>
#include <stdlib.h>
#include <math.h>
#include <locale.h>

int main(){
	
	//Idioma Português
	setlocale(LC_ALL, "portuguese");
	
	//Variáveis
	int i = 10;
	
	//Contagem regressiva de 10 a 1
	printf("Contagem regressiva de 10 até 1");
	for (i = 10; i >= 1; i--){
		printf("\n%d", i);
	}
	return 0;
}
