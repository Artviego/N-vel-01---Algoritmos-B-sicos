#include <stdio.h>
#include <stdlib.h>
#include <math.h>
#include <locale.h>

int main(){
	
	//Idioma Português
	setlocale(LC_ALL, "portuguese");
	
	//Variáveis
	float celsius, fahrenheit;
	
	printf("Digite o valor da temperatura em Celsius: ");
	  scanf("%f", &celsius);
	
	
	//Conversão de Celsius para Fahrenheit
    fahrenheit = (celsius * 1.8)+32;
    
    printf("O valor de %.2f°C em Fahrenheit é: %.2f°F", celsius, fahrenheit);
}
